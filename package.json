{
	"name": "behringer-x32",
	"version": "3.2.1",
	"main": "dist/index.js",
	"type": "module",
	"scripts": {
		"postinstall": "husky",
		"dev": "yarn build:main --watch",
		"build": "rimraf dist && tsc -p tsconfig.build.json",
		"build:main": "tsc -p tsconfig.build.json",
		"lint:raw": "./node_modules/.bin/eslint --ext .ts --ext .js --ignore-pattern dist --ignore-pattern pkg",
		"lint": "yarn lint:raw .",
		"dist": "yarn companion-module-build",
		"clean": "rimraf dist",
		"bundle": "npm run clean && node bundle.js"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/bitfocus/companion-module-behringer-x32.git"
	},
	"license": "MIT",
	"prettier": "@companion-module/tools/.prettierrc.json",
	"lint-staged": {
		"*.{css,json,md,scss}": [
			"prettier --write"
		],
		"*.{ts,tsx,js,jsx}": [
			"yarn lint:raw --fix"
		]
	},
	"engines": {
		"node": "^18.12"
	},
	"dependencies": {
		"@companion-module/base": "~1.8.0",
		"date-fns": "^3.6.0",
		"debounce-fn": "^6.0.0",
		"debug": "^4.3.5",
		"osc": "^2.4.4",
		"p-queue": "^8.0.1",
		"type-fest": "^4.22.1"
	},
	"devDependencies": {
		"@companion-module/tools": "^1.5.1",
		"@types/debug": "^4.1.12",
		"@types/node": "^18.19.41",
		"esbuild": "^0.25.10",
		"husky": "^9.1.1",
		"lint-staged": "^15.2.7",
		"rimraf": "^5.0.9",
		"typescript": "~5.1.6"
	},
	"packageManager": "yarn@4.3.1"
}
